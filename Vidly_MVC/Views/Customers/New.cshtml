@model Vidly_MVC.ViewModels.CustometFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>


@using (Html.BeginForm("Save", "Customers"))
{

    @*@Html.ValidationSummary()*@
    @Html.ValidationSummary(true,"Please fix the below errors!")

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c=>c.Customer.Name)
    </div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.DateOfBirth)
        @Html.TextBoxFor(c => c.Customer.DateOfBirth, "{0:dd MMM yyyy}", new { @class = "form-control",@placeholder="dd MMM yyyy" })
        @Html.ValidationMessageFor(c=>c.Customer.DateOfBirth)
    </div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MembershipTypeId)
        @Html.DropDownListFor(c => c.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Please Select", new { @class = "form-control" })
        @Html.ValidationMessageFor(c=>c.Customer.MembershipTypeId)
    </div>
    <hr />
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(c => c.Customer.IsSubscribeToNewLeter) Subscribe To Newsleter?
        </label>
    </div>
    <hr />
    @Html.HiddenFor(c=>c.Customer.Id)

    <button type="submit" class="btn btn-success">Save</button>

}
